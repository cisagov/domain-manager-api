  "openapi": "3.0.0",
  "paths": {
    "/api": {
      "get": {
        "description": "Returns hello in specified language",
        "parameters": [
          {
            "description": "language",
            "in": "query",
            "name": "lang",
            "required": true,
            "schema": {
              "example": "es",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "text/plain": {
                "schema": {
                  "example": "hola",
                  "type": "string"
                }
              }
            },
            "description": "hello in the requested language"
          }
        },
        "tags": [
          "Hello"
        ]
      }
    }
  }
